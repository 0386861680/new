{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    // @if browserify
    "module": "commonjs",
    // @endif
    // @if !browserify
    "module": "esnext",
    // @endif
    "moduleResolution": "node",
    "skipLibCheck": true,
    "rootDir": "src",
    "target": "ES2017",
    "esModuleInterop": true
  },
  "include": [
    // @if jest || jasmine || mocha || tape || ava
    "test",
    // @endif
    "src"
  ]
}
