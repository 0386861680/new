{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["esnext", "dom"],
    // @if browserify
    "module": "commonjs",
    // @endif
    // @if !browserify
    "module": "esnext",
    // @endif
    "moduleResolution": "node",
    "skipLibCheck": true,
    "rootDir": "src",
    "target": "es5",
    // @if browserify
    "esModuleInterop": true,
    // @endif
    // @if !browserify
    "esModuleInterop": false,
    // @endif
  },
  "include": ["src"]
}
