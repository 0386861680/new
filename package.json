{
  "name": "aurelia2-new",
  "private": true,
  "version": "0.1.0",
  "description": "This package.json file is not needed by 'makes'. We use package.json to setup our tests and changelog.",
  "license": "MIT",
  "devDependencies": {
    "ava": "^2.4.0",
    "cross-env": "^6.0.3",
    "cross-spawn": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "puppeteer": "^1.20.0",
    "standard-changelog": "^2.0.13",
    "vinyl": "^2.2.0"
  },
  "scripts": {
    "test": "ava",
    "test:e2e:webpack": "ava -v e2e-test.js",
    "test:e2e:dumber": "cross-env TARGET_BUNDLER=dumber ava -v e2e-test.js",
    "test:e2e": "run-s test:e2e:webpack test:e2e:dumber",
    "preversion": "npm test",
    "version": "standard-changelog && git add CHANGELOG.md",
    "postversion": "git push && git push --tags"
  },
  "ava": {
    "files": [
      "__test__/**/*"
    ]
  }
}
