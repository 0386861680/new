{
  "extends": ["@parcel/config-default"],
  "transformers": {
    // @if babel
    "*.js": [
      "@aurelia/parcel-transformer",
      "@parcel/transformer-js"
    ],
    // @endif
    // @if typescript
    "*.ts": [
      "@aurelia/parcel-transformer",
      "@parcel/transformer-typescript-tsc",
      "@parcel/transformer-js"
    ],
    // @endif

    // @if shadow-dom
    "*.html": [
      ["@aurelia/parcel-transformer", {
        // The other possible Shadow DOM mode is 'closed'.
        // If you turn on "closed" mode, there will be difficulty to perform e2e
        // tests (such as Cypress). Because shadowRoot is not accessible through
        // standard DOM APIs in "closed" mode.
        "defaultShadowOptions": { "mode": "open" }
      }],
      "@parcel/transformer-js"
    ]
    // @endif
    // @if css-module
    "*.html": [
      ["@aurelia/parcel-transformer", { "useCSSModule": true }],
      "@parcel/transformer-js"
    ]
    // @endif
    // @if !shadow-dom && !css-module
    "*.html": ["@aurelia/parcel-transformer", "@parcel/transformer-js"]
    // @endif
  }
}
